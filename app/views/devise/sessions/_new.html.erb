
<%= stylesheet_link_tag "login" %>

<form accept-charset="UTF-8" action="/users/sign_in.json" class="new_user" id="login-form" method="post">
<input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
<div id="logo_small_login_screen"></div>
<div id="login_close_button"></div>
<div id="username_login"><input id="user_username" name="user[username]" size="30" type="text" /></div>
<div id="password_login"><input id="user_password" name="user[password]" size="30" type="password" /></div>
<div id="fbconnectloginbutton" class="fbconnectbtn"></div>
<div id="or_login"></div>
<div id="login_screen_background"></div>
<div class="hider"><input type="submit" id="sign_in" /></div>
</form>

<div class="hider">
<%- User.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(:user, provider) %><br />
<% end -%>
</div>